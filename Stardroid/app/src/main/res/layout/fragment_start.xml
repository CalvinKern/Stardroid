<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/FullscreenTheme"
    tools:context=".MainActivity"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        >
        <LinearLayout
            android:id="@+id/start_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="@dimen/default_margin"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_title"
                android:layout_marginBottom="@dimen/default_margin"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/button_play"
                android:onClick="onPlayClicked"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:orientation="horizontal"
                >
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/start_google_services_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/start_settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_settings_white_48dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/button_settings"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBackgroundGray"
        >

        <RelativeLayout
            android:id="@+id/start_settings_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/double_margin"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:elevation="10dp"
            >
            <TextView
                android:id="@+id/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/button_settings"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_subtitle"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/settings_title"
                android:layout_above="@id/start_settings_close"
                >

                <Button
                    android:id="@+id/settings_leaderboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/leaderboard"
                    />

                <Button
                    android:id="@+id/settings_achievements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/achievements"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/start_settings_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/default_margin"
                android:text="@string/button_close"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_detail"
                android:background="?attr/selectableItemBackground"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>